<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="409dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_notifications">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="inherit">

            <TextView
                android:id="@+id/lblAxisX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_axis_x"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAxisY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_axis_y"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAxisZ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_axis_z"
                android:textAlignment="center"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/lblAxisXVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/lblAxisYVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/lblAxisZVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblAxisRX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_axis_rx"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAxisRY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_axis_ry"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblAxisRz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_axis_rz"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/lblAxisRxVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/lblAxisRyVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/lblAxisRzVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lblThrottle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_throttle"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblBrake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_brake"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblButtons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/debug_buttons"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/lblThrottleVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/lblBrakeVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/lblButtonsVal"
                style="@android:style/Widget.DeviceDefault.Light.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textDirection="ltr"
                android:textIsSelectable="false" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layoutDirection="rtl"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <CheckBox
            android:id="@+id/cbDebugMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/debug_mode_toggle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <Button
            android:id="@+id/btnSendMotionSignal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@color/design_default_color_primary"
            android:text="@string/debug_send_signal" />

        <Button
            android:id="@+id/btnSendButtonSignal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/design_default_color_primary"
            android:text="@string/debug_send_button" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>